@model ThreeTierArch.UI.ViewModels.Student.StudentEditVm

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Student</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="StudentName" class="control-label"></label>
                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Student Skills</label>
                <div class="row">
                    @for (int i = 0; i < Model.Skills.Count(); i++)
                    {
                        <div class="col-md-6">
                            <input type="hidden" asp-for="@Model.Skills[i].SkillId" />
                            <input asp-for="@Model.Skills[i].IsChecked" />
                            @Model.Skills[i].SkillName
                        </div>
                        @if((i+1)%2 == 0)
                        {
                            @:</div><div class="row">
                        }
                    }
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

